<wpml-config>
    <elementor-widgets>
    <!--Product-->
        <widget name="besa-products">
            <fields>
                <field type="Product: Title" editor_type="LINE">heading_title</field>
                <field type="Product: Sub Title" editor_type="LINE">heading_subtitle</field>
                <field type="Show More: Text Button" editor_type="LINE">text_button</field>
            </fields>
        </widget>

        <widget name="besa-product-category">
            <fields>
                <field type="Product Category: Title" editor_type="LINE">heading_title</field>
                <field type="Product Category: Sub Title" editor_type="LINE">heading_subtitle</field>
                <field type="Show More: Text Button" editor_type="LINE">text_button</field>
            </fields>
        </widget>
        
        <widget name="besa-product-tabs">
            <fields>
                <field type="Product Tabs: Title" editor_type="LINE">heading_title</field>
                <field type="Product Tabs: Sub Title" editor_type="LINE">heading_subtitle</field>
            </fields>
        </widget>

        <widget name="besa-woocommerce-tags">
            <fields>
                <field type="Woocommerce Tags: Title" editor_type="LINE">heading_title</field>
                <field type="Woocommerce Tags: Sub Title" editor_type="LINE">heading_subtitle</field>
            </fields>
        </widget>

        <widget name="besa-custom-image-list-tags">
            <fields>
                <field type="Custom Image List Tags: Title" editor_type="LINE">heading_title</field>
                <field type="Custom Image List Tags: Sub Title" editor_type="LINE">heading_subtitle</field>
                <field type="Show All: Text Button" editor_type="LINE">text_button</field>
            </fields>
        </widget>

        <widget name="besa-product-categories-tabs">
            <fields>
                <field type="Product Categories Tabs: Title" editor_type="LINE">title_cat_tab</field>
                <field type="Product Categories Tabs: Sub Title" editor_type="LINE">sub_title_cat_tab</field>
                <field type="Show All: Text Button" editor_type="LINE">text_button</field>
            </fields>
        </widget>

        <widget name="besa-list-categories-product">
            <fields>
                <field type="List Categories Product: Title" editor_type="LINE">heading_title</field>
                <field type="List Categories Product: Sub Title" editor_type="LINE">heading_subtitle</field>
                <field type="Show All: Text Button" editor_type="LINE">text_button</field>
            </fields>
        </widget>

        <widget name="besa-product-recently-viewed">
            <fields>
                <field type="Recently Viewed Header: Title" editor_type="LINE">header_title</field>
                <field type="Empty Result" editor_type="AREA">empty</field>
                <field type="Read More" editor_type="LINE">readmore_text</field>
            </fields>
        </widget>

        <widget name="besa-custom-image-list-categories">
            <fields>
                <field type="Custom Image List Categories: Title" editor_type="LINE">heading_title</field>
                <field type="Custom Image List Categories: Sub Title" editor_type="LINE">heading_subtitle</field>
                <field type="Show All" editor_type="LINE">text_show_all</field>
            </fields>
        </widget>

        <widget name="besa-product-flash-sales">
            <fields>
                <field type="Product Flash Sales Header: Title" editor_type="LINE">header_text</field>
                <field type="Product Flash Sales Main Content: Title Date" editor_type="LINE">date_title</field>
                <field type="Product Flash Sales Main Content: Title End Date" editor_type="LINE">date_title_ended</field>
                <field type="Read More" editor_type="LINE">readmore_text</field>
            </fields>
        </widget>

        <widget name="besa-product-count-down">
            <fields>
                <field type="Product Count Down: Title" editor_type="LINE">heading_title</field>
                <field type="Product Count Down: Sub Title" editor_type="LINE">heading_subtitle</field>
            </fields>
        </widget>

        <widget name="besa-product-list-tags">
            <fields>
                <field type="Product List Tags: Title" editor_type="LINE">heading_title</field>
                <field type="Product List Tags: Sub Title" editor_type="LINE">heading_subtitle</field>
            </fields>
        </widget>
    <!--End-->
        <widget name="besa-heading">
            <fields>
                <field type="Heading: Title" editor_type="LINE">heading_title</field>
                <field type="Heading: Sub Title" editor_type="LINE">heading_subtitle</field>
            </fields>
        </widget>

         <widget name="besa-features">
            <fields-in-item items_of="features">
                 <field type="Features Item: Title" editor_type="LINE">feature_title</field>
                <field type="Features Item: Description" editor_type="AREA">feature_desc</field>
            </fields-in-item>
        </widget>

        <widget name="besa-brands">
            <fields>
                <field type="Brands: Title" editor_type="LINE">heading_title</field>
                <field type="Brands: Sub Title" editor_type="LINE">heading_subtitle</field>
            </fields>
        </widget>

        <widget name="besa-posts-grid">
            <fields>
                <field type="Post: Title" editor_type="LINE">heading_title</field>
                <field type="Post: Sub Title" editor_type="LINE">heading_subtitle</field>
                <field type="Post: Read More" editor_type="LINE">read_more_text</field>
            </fields>
        </widget>

        <widget name="besa-our-team">
            <fields>
                <field type="Our Team: Title" editor_type="LINE">heading_title</field>
                <field type="Our Team: Sub Title" editor_type="LINE">heading_subtitle</field>
            </fields>
            <fields-in-item items_of="our_team">
                 <field type="Our Team Item: Name" editor_type="LINE">our_team_name</field>
                <field type="Our Team Item: Job" editor_type="LINE">our_team_job</field>
            </fields-in-item>
        </widget>

        <widget name="besa-banner">
            <fields>
                <field type="Banner: Title" editor_type="LINE">banner_title</field>
                <field type="Banner: Sub Title" editor_type="LINE">banner_sub_title</field>
                <field type="Banner: Description" editor_type="AREA">banner_desc</field>
            </fields>
        </widget>
        
        <widget name="besa-testimonials">
            <fields>
                <field type="Testimonials: Title" editor_type="LINE">heading_title</field>
                <field type="Testimonials: Sub Title" editor_type="LINE">heading_subtitle</field>
            </fields>
            <fields-in-item items_of="testimonials">
                <field type="Testimonial Item: Name" editor_type="LINE">testimonial_name</field>
                <field type="Testimonial Item: Job" editor_type="LINE">testimonial_job</field>
                <field type="Testimonial Item: Excerpt" editor_type="AREA">testimonial_excerpt</field>
            </fields-in-item>
        </widget>
        
        <widget name="besa-button">
            <fields>
                <field type="Button: Text" editor_type="LINE">text_button</field>
            </fields>
        </widget>

        <widget name="besa-account">
            <fields>
                <field type="Account: Text Before" editor_type="LINE">text_before</field>
                <field type="Account: Text After" editor_type="LINE">text_after</field>
            </fields>
        </widget>

        <widget name="besa-search-form">
            <fields>
                <field type="Search Form: Placeholder" editor_type="LINE">placeholder_text</field>
                <field type="Button Search Text" editor_type="LINE">text_button_search</field>
                <field type="Categories Search Text" editor_type="LINE">text_categories_search</field>
            </fields>
        </widget>

        <widget name="besa-mini-cart">
            <fields>
                <field type="Mini Cart: Title" editor_type="LINE">title_mini_cart</field>
            </fields>
        </widget>

        <widget name="besa-wishlist">
            <fields>
                <field type="Wishlist: Title" editor_type="LINE">title_wishlist</field>
            </fields>
        </widget>
        
        
    </elementor-widgets>
</wpml-config>